<Pane prefHeight="880.0" prefWidth="1023.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.sae.controleur.PerduControleur">
    <ImageView fitHeight="992.0" fitWidth="1334.0" layoutX="-220.0" pickOnBounds="true" preserveRatio="true">
        <image>
            <Image url="@FondAlien.jpg" />
        </image>
        <effect>
            <ColorAdjust brightness="-0.51" contrast="-0.19" saturation="-0.29" />
        </effect>
    </ImageView>


    <VBox alignment="CENTER" layoutX="165.0" layoutY="256.0" prefHeight="290.0" prefWidth="645.0" spacing="50.0">
